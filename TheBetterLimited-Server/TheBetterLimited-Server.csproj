<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>TheBetterLimited_Server</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc.NewtonsoftJson" Version="6.0.4" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.2.3" />
    <PackageReference Include="MailKit" Version="3.2.0" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="AppLogic\" />
    <None Remove="AppLogic\controller\" />
    <None Remove="AppLogic\model\" />
    <None Remove="Lib\" />
    <None Remove="Helper\File\" />
    <None Remove="APIFilters\" />
    <None Remove="Helper\logger\" />
    <None Remove="AppLogic\Dto\" />
    <None Remove="MailKit" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="AppLogic\" />
    <Folder Include="AppLogic\controller\" />
    <Folder Include="AppLogic\model\" />
    <Folder Include="APIFilters\" />
    <Folder Include="Helper\logger\" />
    <Folder Include="AppLogic\Dto\" />
  </ItemGroup>

  <ItemGroup>
    <Content Remove="secret.json" />
  </ItemGroup>
  <Target Name="MakeDir" AfterTargets="Build">
   <MakeDir Directories="$(OutDir)var\tmp" />
   <MakeDir Directories="$(OutDir)var\log" />
  </Target>

</Project>
